
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
	<array>

		<!-- Enable/Disable label -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Enable/Disable</string>
		</dict>

		<!-- Enable/Disable button -->
		<dict>
			<key>cell</key>
			<string>PSSwitchCell</string>
			<key>default</key>
			<true/>
			<key>defaults</key>
			<string>com.samoht.hvprefs</string>
			<key>key</key>
			<string>enabled</string>
			<key>label</key>
			<string>Enabled</string>
			<key>PostNotification</key>
			<string>com.samoht.hvprefs.settingschanged</string>
		</dict>

		<!-- taptic strength label -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Taptic Strength:</string>
		</dict>

		<!-- haptics cell -->
		<dict>
			<key>cell</key>
			<string>PSSegmentCell</string>
			<key>default</key>
			<integer>1</integer>
			<key>defaults</key>
			<string>com.samoht.hvprefs</string>
			<key>key</key>
			<string>hapticPref</string>
			<key>validValues</key>
			<array>
				<integer>1</integer>
				<integer>2</integer>
				<integer>3</integer>
				<integer>4</integer>
				<integer>5</integer>
			</array>
			<key>validTitles</key>
			<array>
				<string>Light</string>
				<string>Medium</string>
				<string>Strong</string>
				<string>Soft</string>
				<string>Rigid</string>
			</array>
			<key>alignment</key>
			<string>5</string>
			<key>PostNotification</key>	
			<string>com.samoht.hvprefs.settingschanged</string>
        </dict>

		<!-- volume steps label + footer -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Volume Steps:</string>
			<key>footerText</key>
			<string>No respring required!</string>
		</dict>

		<!-- Volume steps slider -->
		<dict>
			<key>cell</key>
			<string>PSSliderCell</string>
			<key>default</key>
			<integer>1</integer>
			<key>defaults</key>
			<string>com.samoht.hvprefs</string>
			<key>key</key>
			<string>volumePref</string>
			<key>min</key>
			<real>0</real>
			<key>max</key>
			<real>1</real>
			<key>showValue</key>
			<true/>
			<key>isSegmented</key>
			<true/>
			<key>segmentCount</key>
			<integer>100</integer>
			<key>PostNotification</key>
			<string>com.samoht.hvprefs.settingschanged</string>
		</dict>

		<!-- About -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>About</string>
		</dict>

		<!-- GitHub Link -->
		<dict>
			<key>action</key>
			<string>sourceLink</string>
			<key>cell</key>
			<string>PSButtonCell</string>
			<key>icon</key>
			<string>GitHub</string>
			<key>label</key>
			<string>Source Code</string>
		</dict>	

	</array>
	<key>title</key>
	<string>HV</string>
</dict>
</plist>
